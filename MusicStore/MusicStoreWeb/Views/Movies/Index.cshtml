@model IEnumerable<MusicStoreWeb.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table>
    <thead>
        <tr>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>	    
    <tbody>
    <tbody>
        @foreach (var movie in Model)
            {
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                        <td>@movie.Genre.Name</td>
                    </tr>	            
                }
            }
    </tbody>	    
</table>